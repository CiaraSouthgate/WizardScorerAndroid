<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="noAnimation" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="slideFromLeft" parent="AppTheme">
        <item name="android:windowAnimationStyle">@anim/slide_from_left</item>
    </style>

    <style name="slideFromRight" parent="AppTheme">
        <item name="android:windowAnimationStyle">@anim/slide_from_right</item>
    </style>
</resources>
