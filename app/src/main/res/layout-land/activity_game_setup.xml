<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/setupAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/game_setup"
            app:title="@string/app_name" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:baselineAligned="false"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        tools:context=".GameSetup">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:contentDescription="@string/wizard_logo"
                app:srcCompat="@drawable/wizard_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/players"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="250sp"
                android:layout_height="65sp"
                android:layout_gravity="center"
                android:layout_marginTop="8sp"
                android:weightSum="4">

                <Button
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="1"
                    android:onClick="removePlayer"
                    app:icon="@drawable/remove"
                    app:iconSize="28sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="4sp"
                    android:layout_marginEnd="4sp"
                    android:layout_weight="2"
                    android:fontFamily="@font/lato_bold"
                    android:onClick="onStartButtonPressed"
                    android:paddingStart="8sp"
                    android:paddingLeft="8sp"
                    android:paddingTop="8sp"
                    android:paddingEnd="8sp"
                    android:paddingRight="8sp"
                    android:paddingBottom="8sp"
                    android:text="@string/start"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:onClick="addPlayer"
                    app:icon="@drawable/add"
                    app:iconSize="28sp"
                    tools:ignore="ButtonStyle" />

            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="8sp"
            android:layout_weight="1"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3sp">

                <include
                    android:id="@+id/player1name"
                    layout="@layout/player_input" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp">

                <include
                    android:id="@+id/player2name"
                    layout="@layout/player_input" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp">

                <include
                    android:id="@+id/player3name"
                    layout="@layout/player_input" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp">

                <include
                    android:id="@+id/player4name"
                    layout="@layout/player_input" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp">

                <include
                    android:id="@+id/player5name"
                    layout="@layout/player_input" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3sp">

                <include
                    android:id="@+id/player6name"
                    layout="@layout/player_input" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
